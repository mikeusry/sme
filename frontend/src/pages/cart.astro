---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Shopping Cart" description="Review your cart and checkout">
	<div class="container-custom py-12">
		<h1 class="text-4xl font-display font-bold mb-8">Shopping Cart</h1>

		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
			<div class="lg:col-span-2">
				<div class="card mb-4">
					<p class="text-gray-600">Your cart is empty</p>
					<a href="/products" class="btn-primary mt-4 inline-block">Continue Shopping</a>
				</div>
			</div>

			<div class="lg:col-span-1">
				<div class="card">
					<h2 class="text-2xl font-bold mb-4">Order Summary</h2>
					<div class="space-y-2 mb-4">
						<div class="flex justify-between">
							<span>Subtotal</span>
							<span>$0.00</span>
						</div>
						<div class="flex justify-between">
							<span>Shipping</span>
							<span>$0.00</span>
						</div>
						<div class="flex justify-between font-bold text-lg pt-2 border-t">
							<span>Total</span>
							<span>$0.00</span>
						</div>
					</div>
					<button class="btn-primary w-full" disabled>Checkout</button>
				</div>
			</div>
		</div>
	</div>
</MainLayout>
