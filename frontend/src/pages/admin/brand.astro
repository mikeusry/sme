---
/**
 * Brand Guide
 *
 * Typography, colors, and voice guidelines for Soul Miner's Eden
 */

import AdminLayout from '../../layouts/AdminLayout.astro';

const colors = {
  primary: [
    { name: 'primary-50', hex: '#f9f5f4', desc: 'Lightest terracotta tint' },
    { name: 'primary-100', hex: '#f3ebe9', desc: 'Very light terracotta' },
    { name: 'primary-200', hex: '#e4d5d3', desc: 'Light blush (Pantone 7604 C)' },
    { name: 'primary-300', hex: '#d4b5af', desc: 'Medium light terracotta' },
    { name: 'primary-400', hex: '#c5a49c', desc: 'Medium terracotta' },
    { name: 'primary-500', hex: '#b59289', desc: 'Main brand (Pantone 2440 C)' },
    { name: 'primary-600', hex: '#a17e75', desc: 'Deeper terracotta' },
    { name: 'primary-700', hex: '#826658', desc: 'Dark terracotta' },
    { name: 'primary-800', hex: '#624d42', desc: 'Darker earth' },
    { name: 'primary-900', hex: '#43352d', desc: 'Darkest earth' },
  ],
  accent: [
    { name: 'accent-500', hex: '#22c55e', desc: 'Main CTA green' },
    { name: 'accent-600', hex: '#16a34a', desc: 'Deep green' },
    { name: 'accent-700', hex: '#15803d', desc: 'Darker green' },
  ],
  warm: [
    { name: 'warm-50', hex: '#fafaf9', desc: 'Background' },
    { name: 'warm-100', hex: '#f5f5f4', desc: 'Surface' },
    { name: 'warm-200', hex: '#e7e5e4', desc: 'Border' },
    { name: 'warm-700', hex: '#44403c', desc: 'Body text' },
    { name: 'warm-900', hex: '#1c1917', desc: 'Heading text' },
  ],
};

const typography = {
  fonts: [
    { name: 'Poppins', use: 'Headings', weights: '600, 700' },
    { name: 'Inter', use: 'Body text', weights: '400, 500, 600' },
  ],
  headings: [
    { tag: 'H1', size: '2.441rem', use: 'Page titles' },
    { tag: 'H2', size: '1.953rem', use: 'Section headers' },
    { tag: 'H3', size: '1.563rem', use: 'Subsection headers' },
    { tag: 'H4', size: '1.25rem', use: 'Card titles' },
  ],
};

const voice = {
  tone: [
    'Warm and welcoming',
    'Faith-grounded but not preachy',
    'Knowledgeable about soil/gardening',
    'Community-focused',
    'Authentic and honest',
  ],
  doNots: [
    'Avoid corporate jargon',
    'No aggressive sales language',
    'Don\'t make unverified claims',
    'Avoid environmental buzzwords without substance',
  ],
  examples: [
    { good: '"We believe in farming God\'s way"', bad: '"Eco-friendly solutions for sustainability"' },
    { good: '"Our 65-acre farm in Bogart"', bad: '"Our state-of-the-art facility"' },
    { good: '"Stop by to see our products"', bad: '"Schedule a consultation today"' },
  ],
};
---

<AdminLayout title="Brand Guide" description="Typography, colors, and voice guidelines">
  <!-- Colors -->
  <div class="admin-card" style="margin-bottom: 2rem;">
    <div class="admin-card-header">
      <h2 class="admin-card-title">Brand Colors</h2>
    </div>
    <div class="admin-card-body">
      <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Primary (Terracotta)</h3>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 0.75rem; margin-bottom: 2rem;">
        {colors.primary.map(color => (
          <div>
            <div style={`background: ${color.hex}; height: 60px; border-radius: 6px; border: 1px solid #e7e5e4;`}></div>
            <div style="font-size: 0.75rem; margin-top: 0.5rem;">
              <div style="font-weight: 600;">{color.name}</div>
              <div style="color: #78716c;">{color.hex}</div>
            </div>
          </div>
        ))}
      </div>

      <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Accent (Green)</h3>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 0.75rem; margin-bottom: 2rem;">
        {colors.accent.map(color => (
          <div>
            <div style={`background: ${color.hex}; height: 60px; border-radius: 6px;`}></div>
            <div style="font-size: 0.75rem; margin-top: 0.5rem;">
              <div style="font-weight: 600;">{color.name}</div>
              <div style="color: #78716c;">{color.hex}</div>
            </div>
          </div>
        ))}
      </div>

      <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Warm Neutrals</h3>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 0.75rem;">
        {colors.warm.map(color => (
          <div>
            <div style={`background: ${color.hex}; height: 60px; border-radius: 6px; border: 1px solid #e7e5e4;`}></div>
            <div style="font-size: 0.75rem; margin-top: 0.5rem;">
              <div style="font-weight: 600;">{color.name}</div>
              <div style="color: #78716c;">{color.hex}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <div class="admin-grid-2">
    <!-- Typography -->
    <div class="admin-card">
      <div class="admin-card-header">
        <h2 class="admin-card-title">Typography</h2>
      </div>
      <div class="admin-card-body">
        <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Fonts</h3>
        <table style="width: 100%; font-size: 0.875rem; margin-bottom: 1.5rem;">
          {typography.fonts.map(font => (
            <tr style="border-bottom: 1px solid #e7e5e4;">
              <td style="padding: 0.5rem 0; font-weight: 600;">{font.name}</td>
              <td style="padding: 0.5rem 0; color: #78716c;">{font.use}</td>
              <td style="padding: 0.5rem 0; color: #78716c;">{font.weights}</td>
            </tr>
          ))}
        </table>

        <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Scale</h3>
        {typography.headings.map(h => (
          <div style="margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid #e7e5e4;">
            <div style={`font-family: 'Poppins', sans-serif; font-size: ${h.size}; font-weight: 700; line-height: 1.2;`}>
              {h.tag}
            </div>
            <div style="font-size: 0.75rem; color: #78716c; margin-top: 0.25rem;">
              {h.size} - {h.use}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Voice -->
    <div class="admin-card">
      <div class="admin-card-header">
        <h2 class="admin-card-title">Brand Voice</h2>
      </div>
      <div class="admin-card-body">
        <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Tone</h3>
        <ul style="list-style: none; margin-bottom: 1.5rem;">
          {voice.tone.map(item => (
            <li style="padding: 0.375rem 0; font-size: 0.875rem; display: flex; align-items: center; gap: 0.5rem;">
              <span style="color: #22c55e;">✓</span> {item}
            </li>
          ))}
        </ul>

        <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Avoid</h3>
        <ul style="list-style: none; margin-bottom: 1.5rem;">
          {voice.doNots.map(item => (
            <li style="padding: 0.375rem 0; font-size: 0.875rem; display: flex; align-items: center; gap: 0.5rem;">
              <span style="color: #ef4444;">✗</span> {item}
            </li>
          ))}
        </ul>

        <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem; color: #78716c;">Examples</h3>
        {voice.examples.map(ex => (
          <div style="margin-bottom: 1rem; font-size: 0.875rem;">
            <div style="display: flex; align-items: flex-start; gap: 0.5rem; margin-bottom: 0.25rem;">
              <span style="color: #22c55e; font-weight: 600;">✓</span>
              <span style="color: #166534;">{ex.good}</span>
            </div>
            <div style="display: flex; align-items: flex-start; gap: 0.5rem;">
              <span style="color: #ef4444; font-weight: 600;">✗</span>
              <span style="color: #991b1b; text-decoration: line-through;">{ex.bad}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Logo -->
  <div class="admin-card" style="margin-top: 2rem;">
    <div class="admin-card-header">
      <h2 class="admin-card-title">Logo</h2>
    </div>
    <div class="admin-card-body">
      <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem;">
        <div>
          <div style="background: #fafaf9; padding: 2rem; border-radius: 8px; display: flex; justify-content: center; border: 1px solid #e7e5e4;">
            <img
              src="https://cdn.prod.website-files.com/5f402c152dc0917b4df7ee70/677ffdc1b10cad976577364a_Soul%20Miner_s%20Eden%20Primary%20Logo%20Vector%20CMYK.svg"
              alt="Soul Miner's Eden Logo"
              style="max-height: 80px; width: auto;"
            />
          </div>
          <div style="font-size: 0.75rem; color: #78716c; margin-top: 0.5rem; text-align: center;">Light background</div>
        </div>
        <div>
          <div style="background: #1c1917; padding: 2rem; border-radius: 8px; display: flex; justify-content: center;">
            <img
              src="https://cdn.prod.website-files.com/5f402c152dc0917b4df7ee70/677ffdc1b10cad976577364a_Soul%20Miner_s%20Eden%20Primary%20Logo%20Vector%20CMYK.svg"
              alt="Soul Miner's Eden Logo"
              style="max-height: 80px; width: auto; filter: brightness(0) invert(1);"
            />
          </div>
          <div style="font-size: 0.75rem; color: #78716c; margin-top: 0.5rem; text-align: center;">Dark background (inverted)</div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
