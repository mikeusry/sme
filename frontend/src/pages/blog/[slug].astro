---
/**
 * Dynamic Blog Post Page
 *
 * Displays full blog post content
 * Route: /blog/{slug}
 */

import MainLayout from '../../layouts/MainLayout.astro';
import { getAllPosts, getPostBySlug, parseContent, getReadingTime } from '../../lib/blog';

// Get static paths for all blog posts
export async function getStaticPaths() {
  const posts = getAllPosts();

  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { slug } = Astro.params;
const post = getPostBySlug(slug);

// 404 if post not found
if (!post) {
  return Astro.redirect('/404');
}

// Parse content into paragraphs
const paragraphs = parseContent(post.content);
const title = paragraphs[0]; // First paragraph is usually the title
const bodyParagraphs = paragraphs.slice(1); // Rest is the body

// Get other posts for "More Articles"
const allPosts = getAllPosts();
const otherPosts = allPosts.filter(p => p.slug !== post.slug).slice(0, 3);

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: post.title, href: `/blog/${post.slug}` },
];
---

<MainLayout
  title={`${post.title} | Soul Miner's Eden Blog`}
  description={post.description || bodyParagraphs[0]?.substring(0, 160)}
>
  <!-- Breadcrumbs -->
  <div class="bg-warm-50 border-b border-secondary-200 py-3">
    <div class="container-custom">
      <nav class="flex items-center gap-2 text-sm">
        {breadcrumbs.map((crumb, index) => (
          <Fragment>
            {index > 0 && <span class="text-secondary-400">/</span>}
            {index === breadcrumbs.length - 1 ? (
              <span class="text-warm-700 font-semibold truncate max-w-[200px]">{crumb.label}</span>
            ) : (
              <a href={crumb.href} class="text-primary-600 hover:text-primary-700 transition-colors">
                {crumb.label}
              </a>
            )}
          </Fragment>
        ))}
      </nav>
    </div>
  </div>

  <article class="container-custom py-12">
    <div class="max-w-3xl mx-auto">
      <!-- Post Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-warm-900 mb-6">
          {post.title}
        </h1>
        <div class="flex items-center gap-4 text-warm-600">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {getReadingTime(post.content)} min read
          </span>
          <span class="text-secondary-400">|</span>
          <span>Soul Miner's Eden</span>
        </div>
      </header>

      <!-- Post Content -->
      <div class="prose prose-lg max-w-none">
        {bodyParagraphs.map(paragraph => {
          // Check if it looks like a heading (short, ends with common patterns)
          const isHeading = paragraph.length < 80 && (
            paragraph.endsWith(':') ||
            !paragraph.includes('.') ||
            paragraph === paragraph.toUpperCase()
          );

          // Check if it's a list item
          const isListItem = paragraph.startsWith('-') || paragraph.startsWith('•') || /^\d+\./.test(paragraph);

          if (isHeading) {
            return <h2 class="text-2xl font-display font-bold text-warm-900 mt-10 mb-4">{paragraph.replace(/:$/, '')}</h2>;
          } else if (isListItem) {
            return <p class="text-warm-700 leading-relaxed pl-4 border-l-2 border-primary-300 my-2">{paragraph}</p>;
          } else {
            return <p class="text-warm-700 leading-relaxed mb-6">{paragraph}</p>;
          }
        })}
      </div>

      <!-- Share & Contact -->
      <div class="mt-12 pt-8 border-t border-secondary-200">
        <div class="bg-primary-50 rounded-xl p-6 border border-primary-200">
          <h3 class="text-xl font-display font-bold text-warm-900 mb-3">
            Questions about this article?
          </h3>
          <p class="text-warm-700 mb-4">
            We'd love to hear from you! Reach out with any questions about gardening, farming, or our products.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="mailto:farm@soulminerseden.com" class="btn-primary">
              Email Us
            </a>
            <a href="tel:+17066134415" class="btn-outline">
              Call (706) 613-4415
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- More Articles -->
    {otherPosts.length > 0 && (
      <section class="mt-16 pt-12 border-t border-secondary-200">
        <h2 class="text-3xl font-display font-bold text-warm-900 mb-8">
          More from the Blog
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {otherPosts.map(otherPost => (
            <article class="card group hover:shadow-lg transition-all duration-300">
              <div class="p-6">
                <h3 class="text-lg font-display font-bold text-warm-900 mb-2 group-hover:text-primary-600 transition-colors">
                  <a href={`/blog/${otherPost.slug}`} class="hover:underline">
                    {otherPost.title}
                  </a>
                </h3>
                <p class="text-warm-600 text-sm mb-4 line-clamp-2">
                  {parseContent(otherPost.content).slice(1, 2).join(' ').substring(0, 100)}...
                </p>
                <a
                  href={`/blog/${otherPost.slug}`}
                  class="text-primary-600 font-semibold text-sm hover:text-primary-700 transition-colors"
                >
                  Read More →
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}
  </article>

  <!-- Schema.org Article Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Article',
    headline: post.title,
    description: post.description || bodyParagraphs[0]?.substring(0, 160),
    author: {
      '@type': 'Organization',
      name: "Soul Miner's Eden",
    },
    publisher: {
      '@type': 'Organization',
      name: "Soul Miner's Eden",
      url: 'https://soulminerseden.com',
    },
  })} />
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
