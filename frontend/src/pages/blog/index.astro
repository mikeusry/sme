---
/**
 * Blog Index Page
 *
 * Browse all Soul Miner's Eden blog posts
 * Route: /blog
 */

import MainLayout from '../../layouts/MainLayout.astro';
import { getAllPosts, getExcerpt, getReadingTime } from '../../lib/blog';

const posts = getAllPosts();
---

<MainLayout
  title="Blog | Soul Miner's Eden"
  description="Tips, guides, and stories about sustainable farming, gardening, and land stewardship from Soul Miner's Eden in Athens, GA."
>
  <!-- Page Header -->
  <div class="bg-gradient-to-br from-primary-500 to-primary-600 text-white py-16">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-4">
          From the Farm
        </h1>
        <p class="text-xl md:text-2xl text-primary-100">
          Tips, guides, and stories about sustainable farming, gardening, and living off the land.
        </p>
      </div>
    </div>
  </div>

  <div class="container-custom py-12">
    <!-- Blog Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="card group hover:shadow-xl transition-all duration-300">
          <div class="p-6">
            <h2 class="text-xl font-display font-bold text-warm-900 mb-3 group-hover:text-primary-600 transition-colors">
              <a href={`/blog/${post.slug}`} class="hover:underline">
                {post.title}
              </a>
            </h2>
            <p class="text-warm-600 mb-4 line-clamp-3">
              {getExcerpt(post.content, 150)}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-warm-500">
                {getReadingTime(post.content)} min read
              </span>
              <a
                href={`/blog/${post.slug}`}
                class="text-primary-600 font-semibold hover:text-primary-700 transition-colors inline-flex items-center gap-1"
              >
                Read More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Newsletter CTA -->
    <section class="mt-16 bg-gradient-to-br from-accent-50 to-primary-50 rounded-2xl p-8 md:p-12 border border-primary-200">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-display font-bold text-warm-900 mb-4">
          Stay Connected
        </h2>
        <p class="text-lg text-warm-700 mb-6">
          Follow us for the latest updates on seasonal products, farm events, and gardening tips.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary px-8 py-3">
            Get in Touch
          </a>
          <a href="tel:+17066134415" class="btn-outline px-8 py-3">
            Call (706) 613-4415
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
