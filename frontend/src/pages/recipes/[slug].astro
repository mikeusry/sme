---
/**
 * Dynamic Recipe Detail Page
 *
 * Displays full recipe with ingredients, instructions, and equipment
 * Route: /recipes/{slug}
 */

import MainLayout from '../../layouts/MainLayout.astro';
import { getAllRecipes, getRecipeBySlug, getIngredientSections } from '../../lib/recipes';

// Get static paths for all recipes
export async function getStaticPaths() {
  const recipes = getAllRecipes();

  return recipes.map(recipe => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

const { slug } = Astro.params;
const recipe = getRecipeBySlug(slug);

// 404 if recipe not found
if (!recipe) {
  return Astro.redirect('/404');
}

// Get ingredient sections
const ingredientSections = getIngredientSections(recipe.ingredients);

// Get other recipes for "More Recipes"
const allRecipes = getAllRecipes();
const otherRecipes = allRecipes
  .filter(r => r.slug !== recipe.slug && r.category === recipe.category)
  .slice(0, 3);

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Recipes', href: '/recipes' },
  { label: recipe.title, href: `/recipes/${recipe.slug}` },
];
---

<MainLayout
  title={`${recipe.title} | Soul Miner's Eden Recipes`}
  description={recipe.description}
>
  <!-- Breadcrumbs -->
  <div class="bg-warm-50 border-b border-secondary-200 py-3">
    <div class="container-custom">
      <nav class="flex items-center gap-2 text-sm">
        {breadcrumbs.map((crumb, index) => (
          <Fragment>
            {index > 0 && <span class="text-secondary-400">/</span>}
            {index === breadcrumbs.length - 1 ? (
              <span class="text-warm-700 font-semibold truncate max-w-[200px]">{crumb.label}</span>
            ) : (
              <a href={crumb.href} class="text-primary-600 hover:text-primary-700 transition-colors">
                {crumb.label}
              </a>
            )}
          </Fragment>
        ))}
      </nav>
    </div>
  </div>

  <article class="container-custom py-12">
    <!-- Recipe Header -->
    <header class="max-w-4xl mx-auto mb-12">
      <div class="flex items-center gap-3 mb-4">
        <span class="px-4 py-1 bg-accent-100 text-accent-700 rounded-full text-sm font-semibold">
          {recipe.category}
        </span>
      </div>

      <h1 class="text-4xl md:text-5xl font-display font-bold text-warm-900 mb-6">
        {recipe.title}
      </h1>

      <p class="text-xl text-warm-700 mb-8">
        {recipe.description}
      </p>

      <!-- Recipe Meta -->
      <div class="flex flex-wrap gap-6 p-6 bg-secondary-50 rounded-xl border border-secondary-200">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-warm-500">Total Time</p>
            <p class="font-semibold text-warm-900">{recipe.time}</p>
          </div>
        </div>

        {recipe.servings && (
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-warm-500">Servings</p>
              <p class="font-semibold text-warm-900">{recipe.servings}</p>
            </div>
          </div>
        )}

        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-secondary-200 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-warm-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-warm-500">Steps</p>
            <p class="font-semibold text-warm-900">{recipe.instructions.length} steps</p>
          </div>
        </div>
      </div>
    </header>

    <!-- Recipe Content -->
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Sidebar: Ingredients & Equipment -->
        <aside class="lg:col-span-1 space-y-8">
          <!-- Ingredients -->
          <div class="bg-accent-50 rounded-xl p-6 border border-accent-200 sticky top-6">
            <h2 class="text-xl font-display font-bold text-warm-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
              Ingredients
            </h2>

            {ingredientSections.map(section => (
              <div class="mb-4">
                {ingredientSections.length > 1 && (
                  <h3 class="font-semibold text-warm-800 mb-2 text-sm uppercase tracking-wide">
                    {section.title}
                  </h3>
                )}
                <ul class="space-y-2">
                  {section.items.map(item => (
                    <li class="flex items-start gap-2 text-warm-700">
                      <span class="text-accent-500 mt-1">•</span>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          <!-- Equipment -->
          {recipe.equipment && recipe.equipment.length > 0 && (
            <div class="bg-secondary-50 rounded-xl p-6 border border-secondary-200">
              <h2 class="text-xl font-display font-bold text-warm-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-warm-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Equipment
              </h2>
              <ul class="space-y-2">
                {recipe.equipment.map(item => (
                  <li class="flex items-center gap-2 text-warm-700">
                    <span class="text-secondary-400">→</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </aside>

        <!-- Main: Instructions -->
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-display font-bold text-warm-900 mb-6">
            Instructions
          </h2>

          <ol class="space-y-6">
            {recipe.instructions.map((step, index) => (
              <li class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">
                  {index + 1}
                </div>
                <div class="flex-grow pt-2">
                  <p class="text-warm-700 leading-relaxed">{step}</p>
                </div>
              </li>
            ))}
          </ol>

          <!-- Garnish (if available) -->
          {recipe.garnish && recipe.garnish.length > 0 && (
            <div class="mt-8 p-6 bg-primary-50 rounded-xl border border-primary-200">
              <h3 class="font-display font-bold text-warm-900 mb-3">
                Optional Garnishes
              </h3>
              <div class="flex flex-wrap gap-2">
                {recipe.garnish.map(item => (
                  <span class="px-3 py-1 bg-white rounded-full text-sm text-warm-700 border border-primary-200">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>

    <!-- More Recipes -->
    {otherRecipes.length > 0 && (
      <section class="max-w-4xl mx-auto mt-16 pt-12 border-t border-secondary-200">
        <h2 class="text-3xl font-display font-bold text-warm-900 mb-8">
          More {recipe.category} Recipes
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {otherRecipes.map(other => (
            <article class="card group hover:shadow-lg transition-all duration-300">
              <div class="p-5">
                <span class="text-xs text-warm-500 mb-2 block">{other.time}</span>
                <h3 class="text-lg font-display font-bold text-warm-900 mb-2 group-hover:text-primary-600 transition-colors">
                  <a href={`/recipes/${other.slug}`} class="hover:underline">
                    {other.title}
                  </a>
                </h3>
                <a
                  href={`/recipes/${other.slug}`}
                  class="text-primary-600 font-semibold text-sm hover:text-primary-700 transition-colors"
                >
                  View Recipe →
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}
  </article>

  <!-- Schema.org Recipe Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Recipe',
    name: recipe.title,
    description: recipe.description,
    recipeCategory: recipe.category,
    totalTime: recipe.time,
    recipeYield: recipe.servings,
    recipeIngredient: Array.isArray(recipe.ingredients)
      ? recipe.ingredients
      : Object.values(recipe.ingredients).flat(),
    recipeInstructions: recipe.instructions.map((step, i) => ({
      '@type': 'HowToStep',
      position: i + 1,
      text: step,
    })),
    author: {
      '@type': 'Organization',
      name: "Soul Miner's Eden",
    },
  })} />
</MainLayout>
