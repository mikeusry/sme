---
/**
 * Footer Component
 * Matches soulminerseden.com footer structure
 * Source: Live site crawl + business-info.json
 */

const currentYear = new Date().getFullYear();

const businessInfo = {
  name: "Soul Miner's Eden",
  address: {
    street: "189 Luke Road",
    city: "Bogart",
    state: "GA",
    zip: "30622"
  },
  phone: "(706) 613-4415",
  phoneHref: "tel:+17066134415",
  email: "info@soulminerseden.com",
  social: {
    facebook: "https://www.facebook.com/soulminerseden",
    instagram: "https://www.instagram.com/soulminerseden/",
    youtube: "https://www.youtube.com/playlist?list=PLzhFffk45jBfnuHfFbLlaR2GajzI_vMZR"
  }
};

const footerLinks = {
  landscapeSupplies: [
    { label: "Compost", href: "/products/compost" },
    { label: "Topsoil", href: "/products/topsoil" },
    { label: "Natural Mulch", href: "/products/double-ground-hardwood-mulch" },
    { label: "Pine Bark Mulch", href: "/products/pine-bark-mulch" },
    { label: "Brown Mulch", href: "/products/brown-mulch" },
    { label: "Black Mulch", href: "/products/black-mulch" },
    { label: "Red Mulch", href: "/products/red-mulch" },
    { label: "Wood Chips", href: "/products/wood-chips" },
    { label: "Sod Soil", href: "/products/sod-soil" },
    { label: "Bioretention Soil", href: "/products/bioretention-soil" },
    { label: "Used Artificial Turf", href: "/products/used-artificial-turf" },
  ],
  resources: [
    { label: "FAQs", href: "/resources/faq" },
    { label: "Plant Care Guides", href: "/blog" },
    { label: "Sustainability", href: "/about" },
  ],
  support: [
    { label: "Contact Us", href: "/contact" },
    { label: "Delivery Info", href: "/resources/delivery" },
  ],
  company: [
    { label: "Our Story", href: "/about" },
    { label: "Sustainable Farming", href: "/about" },
    { label: "Visit Us", href: "/contact" },
  ]
};
---

<footer class="bg-warm-900 text-warm-300">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10">
      <!-- Logo & Contact Info -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img
            src="https://cdn.prod.website-files.com/5f402c152dc0917b4df7ee70/677ffdc1b10cad976577364a_Soul%20Miner_s%20Eden%20Primary%20Logo%20Vector%20CMYK.svg"
            alt="Soul Miner's Eden"
            class="h-12 w-auto brightness-0 invert"
          />
        </a>

        <div class="space-y-3 text-sm">
          <p class="flex items-start gap-2">
            <svg class="w-5 h-5 text-primary-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>
              {businessInfo.address.street}<br />
              {businessInfo.address.city}, {businessInfo.address.state} {businessInfo.address.zip}
            </span>
          </p>
          <p>
            <a href={businessInfo.phoneHref} class="flex items-center gap-2 hover:text-primary-400 transition-colors">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {businessInfo.phone}
            </a>
          </p>
          <p>
            <a href={`mailto:${businessInfo.email}`} class="flex items-center gap-2 hover:text-primary-400 transition-colors">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {businessInfo.email}
            </a>
          </p>
        </div>

        <!-- Social Links -->
        <div class="flex gap-4 mt-6">
          <a href={businessInfo.social.facebook} target="_blank" rel="noopener noreferrer" class="text-warm-400 hover:text-primary-400 transition-colors" aria-label="Facebook">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href={businessInfo.social.instagram} target="_blank" rel="noopener noreferrer" class="text-warm-400 hover:text-primary-400 transition-colors" aria-label="Instagram">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
            </svg>
          </a>
          <a href={businessInfo.social.youtube} target="_blank" rel="noopener noreferrer" class="text-warm-400 hover:text-primary-400 transition-colors" aria-label="YouTube">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Landscape Supplies -->
      <div>
        <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Landscape Supplies</h4>
        <ul class="space-y-2 text-sm">
          {footerLinks.landscapeSupplies.map(link => (
            <li>
              <a href={link.href} class="hover:text-primary-400 transition-colors">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Resources</h4>
        <ul class="space-y-2 text-sm">
          {footerLinks.resources.map(link => (
            <li>
              <a href={link.href} class="hover:text-primary-400 transition-colors">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Support</h4>
        <ul class="space-y-2 text-sm">
          {footerLinks.support.map(link => (
            <li>
              <a href={link.href} class="hover:text-primary-400 transition-colors">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Company</h4>
        <ul class="space-y-2 text-sm">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="hover:text-primary-400 transition-colors">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-warm-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm">
        <p class="text-warm-500">
          &copy; {currentYear} Soul Miner's Eden. All rights reserved.
        </p>
        <div class="flex flex-wrap justify-center gap-6 text-warm-500">
          <a href="/privacy" class="hover:text-primary-400 transition-colors">Privacy Policy</a>
          <a href="/terms" class="hover:text-primary-400 transition-colors">Terms of Service</a>
          <a href="/cookies" class="hover:text-primary-400 transition-colors">Cookies Settings</a>
        </div>
      </div>
    </div>
  </div>
</footer>
