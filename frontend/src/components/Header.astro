---
/**
 * Header Component
 * Matches soulminerseden.com navigation structure
 * Source: Live site crawl
 */

import CartIcon from './cart/CartIcon.astro';

const navItems = [
  {
    label: "Landscape Supply",
    href: "/products",
    dropdown: [
      { label: "All Products", href: "/products" },
      { label: "Compost", href: "/products/compost" },
      { label: "Topsoil", href: "/products/topsoil" },
      { label: "Natural Mulch", href: "/products/double-ground-hardwood-mulch" },
      { label: "Pine Bark Mulch", href: "/products/pine-bark-mulch" },
      { label: "Brown Mulch", href: "/products/brown-mulch" },
      { label: "Black Mulch", href: "/products/black-mulch" },
      { label: "Red Mulch", href: "/products/red-mulch" },
      { label: "Wood Chips", href: "/products/wood-chips" },
      { label: "Sod Soil", href: "/products/sod-soil" },
      { label: "Bioretention Soil", href: "/products/bioretention-soil" },
      { label: "Used Artificial Turf", href: "/products/used-artificial-turf" },
    ]
  },
  {
    label: "Land Management",
    href: "/land-management",
    dropdown: [
      { label: "Eden Grazing Services", href: "/land-management" },
      { label: "How It Works", href: "/land-management/how-it-works" },
      { label: "Service Packages", href: "/land-management/services" },
      { label: "Request Assessment", href: "/land-management/request" },
    ]
  },
  {
    label: "Our Story",
    href: "/about",
    dropdown: [
      { label: "About Us", href: "/about" },
      { label: "Blog", href: "/blog" },
      { label: "Recipes", href: "/recipes" },
      { label: "Sustainable Farming", href: "/sustainable-agriculture-farming-practices" },
    ]
  },
  {
    label: "Visit Us",
    href: "/contact",
  }
];

const businessInfo = {
  phone: "(706) 613-4415",
  phoneHref: "tel:+17066134415",
};
---

<header class="bg-white sticky top-0 z-50 border-b border-warm-200">
  <nav class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img
          src="https://cdn.prod.website-files.com/5f402c152dc0917b4df7ee70/677ffdc1b10cad976577364a_Soul%20Miner_s%20Eden%20Primary%20Logo%20Vector%20CMYK.svg"
          alt="Soul Miner's Eden"
          class="h-14 w-auto"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        {navItems.map((item) => (
          <div class="relative group">
            {item.dropdown ? (
              <>
                <button class="flex items-center gap-1 text-warm-700 hover:text-primary-600 font-medium py-2 transition-colors">
                  {item.label}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="absolute top-full left-0 mt-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <div class="bg-white shadow-lg rounded-lg border border-warm-200 py-2 min-w-[220px]">
                    {item.dropdown.map((subItem, idx) => (
                      <a
                        href={subItem.href}
                        class={`block px-4 py-2 text-warm-700 hover:bg-primary-50 hover:text-primary-600 transition-colors ${idx === 0 ? 'font-semibold border-b border-warm-100 mb-1' : ''}`}
                      >
                        {subItem.label}
                      </a>
                    ))}
                  </div>
                </div>
              </>
            ) : (
              <a href={item.href} class="text-warm-700 hover:text-primary-600 font-medium py-2 transition-colors">
                {item.label}
              </a>
            )}
          </div>
        ))}
      </div>

      <!-- Right Side: Phone + Cart -->
      <div class="hidden lg:flex items-center gap-4">
        <a href={businessInfo.phoneHref} class="flex items-center gap-2 text-warm-700 hover:text-primary-600 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="font-medium">{businessInfo.phone}</span>
        </a>
        <CartIcon />
      </div>

      <!-- Mobile: Cart + Menu Button -->
      <div class="lg:hidden flex items-center gap-2">
        <CartIcon />
        <button id="mobile-menu-btn" class="p-2 text-warm-700 hover:text-primary-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="menu-open-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="menu-close-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-6">
      <div class="border-t border-warm-200 pt-4">
        {navItems.map((item) => (
          <div class="py-2">
            {item.dropdown ? (
              <div class="mobile-dropdown">
                <button class="mobile-dropdown-btn flex items-center justify-between w-full py-2 text-warm-700 font-medium">
                  {item.label}
                  <svg class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="mobile-dropdown-content hidden pl-4 mt-1 border-l-2 border-primary-200">
                  {item.dropdown.map((subItem) => (
                    <a href={subItem.href} class="block py-2 text-warm-600 hover:text-primary-600">
                      {subItem.label}
                    </a>
                  ))}
                </div>
              </div>
            ) : (
              <a href={item.href} class="block py-2 text-warm-700 font-medium hover:text-primary-600">
                {item.label}
              </a>
            )}
          </div>
        ))}

        <!-- Mobile Phone -->
        <div class="mt-4 pt-4 border-t border-warm-200">
          <a href={businessInfo.phoneHref} class="flex items-center gap-2 text-warm-700 font-medium">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {businessInfo.phone}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpenIcon?.classList.toggle('hidden');
    menuCloseIcon?.classList.toggle('hidden');
  });

  // Mobile dropdown toggles
  document.querySelectorAll('.mobile-dropdown-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const content = btn.nextElementSibling;
      const icon = btn.querySelector('svg');
      content?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
