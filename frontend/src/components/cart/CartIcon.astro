---
/**
 * Cart Icon with Badge
 *
 * Displays a shopping cart icon with item count badge.
 * Updates reactively when cart changes.
 */
---

<a href="/cart" class="cart-icon-wrapper relative p-2 text-warm-700 hover:text-primary-600 transition-colors" aria-label="Shopping Cart">
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
  </svg>
  <!-- Badge (hidden when count is 0) -->
  <span class="cart-badge hidden absolute -top-1 -right-1 bg-primary-600 text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center">
    0
  </span>
</a>

<script>
  import { subscribeToCart, getCartItemCount, initializeCart } from '../../lib/cart-store';

  // Initialize all cart icons on page
  document.querySelectorAll('.cart-icon-wrapper').forEach(wrapper => {
    const badge = wrapper.querySelector('.cart-badge') as HTMLElement;

    function updateBadge(count: number) {
      if (!badge) return;

      if (count > 0) {
        badge.textContent = count > 99 ? '99+' : String(count);
        badge.classList.remove('hidden');
      } else {
        badge.classList.add('hidden');
      }
    }

    // Subscribe to cart updates
    subscribeToCart((cart, isLoading) => {
      if (cart) {
        const count = cart.items.reduce((sum, item) => sum + item.quantity, 0);
        updateBadge(count);
      } else {
        updateBadge(0);
      }
    });

    // Initialize cart on page load (silently)
    initializeCart().catch(() => {
      // Silently fail - cart will be created when needed
    });
  });
</script>
