{
  "name": "soul-miners",
  "version": "1.0.0",
  "description": "Soul Miners - E-commerce platform with Astro frontend and Medusa backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "parse:products": "node scripts/parse-products.js",
    "migrate:images": "node scripts/migrate-images.js",
    "migrate:product-images": "node scripts/migrate-product-images.js"
  },
  "devDependencies": {
    "cloudinary": "^2.8.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
